<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Add a New vehicle</h3>
            <form method="post" action="/listings" class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label"></lable>
                    <input type="text" name="listing[title]" placeholder="Add vehicle name" class="form-control"
                        required>
                    <div class="valid-feedback">Title Looks Good!</div>


                </div>

                 <div class="mb-3">
                    <lable for="title" class="form-label"></lable>
                    <input type="number" name="listing[mob]" placeholder="Add your Mobile number" class="form-control"
                        required>
                    <div class="valid-feedback">Looks Good!</div>


                </div>



                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea type="text" name="listing[description]" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please Enter Description</div>
                </div>


                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</lable>
                        <input name="listing[image]" type="file" class="form-control" required>


                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</lable>
                        <input name="listing[price]" placeholder="1200 " class="form-control" required>
                        <div class="invalid-feedback">Not Valid Price</div>

                </div>

                <div class="mb-3 col-md-8">
                    <label for="mileage" class="form-label">Mileage</lable>
                        <input name="listing[mileage]" placeholder="50 " class="form-control" required>
                        <div class="invalid-feedback">Not Valid Mileage</div>

                </div>
                </div>

                <div class="row">

                    <div class="mb-3 col-md-4 ">
                        <lable for="location" class="form-label">Location</lable>
                        <input type="text" name="listing[location]" placeholder="  Jaipur,Rajasthan     "
                            class="form-control" required>

                        <div class="invalid-feedback">Enter a valid location</div>

                    </div>

                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                        <div class="invalid-feedback">Enter a valid country</div>

                    </div>
                </div>



                <br><br>
                <button class="btn  add-btn mb-4">Add</button>

            </form>
        </div>

    </div>