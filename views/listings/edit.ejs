<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">Title Looks Good!</div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea type="text" name="listing[description]" class="form-control"
                        required><%= listing.description %> </textarea>
                    <div class="invalid-feedback">Please Enter Description</div>
                </div>

                <div class="mb-3">
                    Original Listing Image <br>
                    <img src="<%= originalImageUrl %>" alt="" class="originalImage">

                </div>

                <div class="mb-3">
                    <lable for="image" class="form-label">Upload New Image</lable>
                    <input type="file" name="listing[image]" class="form-control">
                </div>
                <div class="mb-3">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                    <div class="invalid-feedback">Not Valid Price</div>
                </div>
                <div class="mb-3">
                    <lable for="mileage" class="form-label">Mileage</lable>
                    <input name="listing[mileage]" value="<%= listing.mileage %>" class="form-control" required>
                    <div class="invalid-feedback">Not Valid Mileage</div>
                </div>

                <div class="row">


                    <div class="mb-3 col-md-4">
                        <lable for="location" class="form-label">Location</lable>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control"
                            required>
                        <div class="invalid-feedback">Enter a valid location</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control"
                            required>
                        <div class="invalid-feedback">Enter a valid country</div>
                    </div>
                </div>


                <button class="btn btn-dark edit-btn  ">Edit</button>

            </form>
        </div>
    </div>